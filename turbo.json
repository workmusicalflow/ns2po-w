{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_VERSION"],
  "globalDependencies": [
    "pnpm-lock.yaml",
    ".npmrc"
  ],
  "pipeline": {
    "prepare": {
      "cache": true,
      "outputs": [".nuxt/**", ".nitro/**", ".output/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".nuxt/**", ".output/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^build", "prepare"],
      "inputs": ["**/*.ts", "**/*.vue", "tsconfig*.json", "package.json"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    }
  }
}