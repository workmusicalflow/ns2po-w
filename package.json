{
  "name": "ns2po-platform",
  "version": "0.1.0",
  "description": "NS2PO - Plateforme électorale numérique avec infrastructure décentralisée",
  "private": true,
  "packageManager": "pnpm@8.15.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "clean": "turbo clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "assets:add": "node scripts/asset-manager.mjs add",
    "assets:remove": "node scripts/asset-manager.mjs remove",
    "assets:update": "node scripts/asset-manager.mjs update",
    "assets:sync": "node scripts/asset-manager.mjs sync",
    "assets:stats": "node scripts/asset-manager.mjs stats",
    "assets:invalidate": "node scripts/asset-manager.mjs invalidate"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "prettier": "^3.0.0",
    "turbo": "^1.10.12"
  },
  "engines": {
    "node": ">=20.x"
  },
  "dependencies": {
    "@libsql/client": "^0.15.12",
    "airtable": "^0.12.2",
    "cloudinary": "^2.7.0",
    "dotenv": "^17.2.1",
    "@oxc-parser/binding-wasm32-wasi": "^0.87.0",
    "@oxc-transform/binding-wasm32-wasi": "^0.87.0"
  },
  "pnpm": {
    "overrides": {
      "@oxc-parser/binding-linux-x64-gnu": "@oxc-parser/binding-wasm32-wasi",
      "@oxc-parser/binding-darwin-x64": "@oxc-parser/binding-wasm32-wasi",
      "@oxc-parser/binding-win32-x64-msvc": "@oxc-parser/binding-wasm32-wasi",
      "@oxc-transform/binding-linux-x64-gnu": "@oxc-transform/binding-wasm32-wasi",
      "@oxc-transform/binding-darwin-x64": "@oxc-transform/binding-wasm32-wasi",
      "@oxc-transform/binding-win32-x64-msvc": "@oxc-transform/binding-wasm32-wasi"
    }
  }
}